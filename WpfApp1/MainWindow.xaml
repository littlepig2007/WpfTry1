<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUserNumber" HorizontalAlignment="Left" Margin="93,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93" Height="21" TextChanged="txtUserNumber_TextChanged"/>
        <Button x:Name="btnCheckNumber" Content="房间号" HorizontalAlignment="Left" Margin="93,109,0,0" VerticalAlignment="Top" Height="26" Width="93" Click="btnCheckNumber_Click"/>
        <Button x:Name="btnArray" Content="数组" HorizontalAlignment="Left" Margin="93,160,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.2,-0.22" Height="26" Width="93" Click="btnArray_Click"/>
        <Button x:Name="btnWatermelon" Content="买西瓜" HorizontalAlignment="Left" Height="26" Margin="93,10,0,0" VerticalAlignment="Center" Width="93" Click="btnWatermelon_Click"/>

    </Grid>
</Window>
